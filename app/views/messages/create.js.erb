function refreshForm(innerHTML) {
  const newMessageForm = document.getElementById('new_message');
  newMessageForm.innerHTML = innerHTML;
}

function addMessage(messageHTML) {
  const messages = document.getElementById('messages');
  messages.insertAdjacentHTML('beforeend', messageHTML);
}

<% if @message.errors.any? %>
  refreshForm('<%= j render "messages/form", friend: @friend, message: @message %>');
<% else %>
  addMessage('<%= j render "messages/message_sent", message: @message, current_user_id: current_user.id %>')
  refreshForm('<%= j render "messages/form", friend: @friend, message: Message.new %>');
<% end %>


