<h3>My conversation with <%= @friend.first_name %></h3>
<div class="chat-box">

  <% @messages.each do |message| %>
  <% if message.sender == current_user %>
  <div class="message-image">
    <%= image_tag message.sender.avatar, class: "avatar-large mb-2" %>
  </div>
    <div class="card-chat sender">
      <p><%= message.content %></p>
    </div>
  <% else %>
    <%= image_tag message.sender.avatar, class: "avatar-large mb-2" %>
    <div class="card-chat">
       <p><%= message.content %></p>
    </div>
  <% end %>
  <% end %>
  <%= render 'messages/form', friend: @friend, message: @message %>
  <%= link_to 'Back to conversations', conversations_dashboard_path %>
</div>



