
<div class="container">
  <div class="card-container">
    <% team.users.each do |user| %>
        <% if user.role == "Coach"%>
    <% team.images.each do |image|%>
    <div class="top-card">
      <div id="background">
        <%= image_tag image, class: "team-logo" %>
      </div>
    </div>
    <h2>Organisation</h2>
    <div class="middle-card">
      <h4><%= team.name %></h4>
    </div>
    <h2>Location</h2>
    <div class="bottom-card">
      <h4><strong>From:</strong> <%= team.country %></h4>
    </div>
    <h2>Coach</h2>
    <div class="bottom-card">

      <%=  user.pseudo  %>
      <% end %>
    </div>

    <% end %>
    <% end %>
  </div>
</div>
