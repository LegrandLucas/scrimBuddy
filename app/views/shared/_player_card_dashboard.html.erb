<div id="row">
  <div class="col-lg-3">
    <div class="center-team-images">

      <% current_user.team.users.each do |user| %>
        <div class="player-card-dashboard">
          <%= image_tag (user.avatar), class: "avatar" %>
          <div class="text-bloc">
            <div class="flex-item">
              <strong>Pseudo:</strong> <%= user.pseudo %><br>
              <div class="flex">
                <strong>Role:</strong> <%= user.role %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
