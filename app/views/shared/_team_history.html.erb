
<% if scrim.winner_team.downcase == current_user.team.name.downcase %>

  <div class="win-match team-match">
    <div class="row">
      <div class="col-2">
        <div class="winner-text">
          <p>VICTORY</p>
        </div>
      </div>
          <div class="d-flex justify-content-around team_host col-4">
            <div class="team_logo">
              <%= image_tag scrim.team_host.images[0] %>
            </div>
            <% scrim[:team_host_champions].split.each do |team_host_champion| %>
              <div class="team-champions">
                <%= image_tag "http://ddragon.leagueoflegends.com/cdn/9.23.1/img/champion/#{team_host_champion}.png" %>
              </div>
            <% end %>
          </div>

          <div class="score col-2">
            <p><%= scrim[:team_host_kills] %> - <%= scrim[:team_visitor_kills] %></p>
          </div>

          <div class="d-flex justify-content-around team_visitor col-4">
            <% scrim[:team_visitor_champions].split.each do |team_visitor_champion| %>
              <div class="team-champions">
                <%= image_tag "http://ddragon.leagueoflegends.com/cdn/9.23.1/img/champion/#{team_visitor_champion}.png" %>
              </div>
            <% end %>
            <div class="team_logo">
              <%= image_tag scrim.team_visitor.images[0] %>
            </div>
          </div>
    </div>
  </div>

<% else %>

  <div class="lose-match team-match">
    <div class="row">
      <div class="col-2">
        <div class="winner-text">
          <p>DEFEAT</p>
        </div>
      </div>
          <div class="d-flex justify-content-around team_host col-4">
            <div class="team_logo">
              <%= image_tag scrim.team_host.images[0] %>
            </div>
            <% scrim[:team_host_champions].split.each do |team_host_champion| %>
              <div class="team-champions">
                <%= image_tag "http://ddragon.leagueoflegends.com/cdn/9.23.1/img/champion/#{team_host_champion}.png" %>
              </div>
            <% end %>
          </div>

          <div class="score col-2">
            <p><%= scrim[:team_host_kills] %> - <%= scrim[:team_visitor_kills] %></p>
          </div>

          <div class="d-flex justify-content-around team_visitor col-4">
            <% scrim[:team_visitor_champions].split.each do |team_visitor_champion| %>
              <div class="team-champions">
                <%= image_tag "http://ddragon.leagueoflegends.com/cdn/9.23.1/img/champion/#{team_visitor_champion}.png" %>
              </div>
            <% end %>
            <div class="team_logo">
              <%= image_tag scrim.team_visitor.images[0] %>
            </div>
          </div>
    </div>
  </div>

<% end %>
