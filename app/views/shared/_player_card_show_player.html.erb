<div class="player-card-container">
  <div class="top-card-player">
    <h2 class="player-name"><%= @user.pseudo %></h2>
    <div id="background-player">
      <%= image_tag (@user.avatar), class: "profile-pic" %>
    </div>
  </div>
    <h2 class="text-center">Information</h2>
  <div class="middle-card">
    <div class="player-full-name">
    <h4><strong>Name:</strong> <%= @user.first_name %>  <%= @user.last_name %></h4>
    </div>
    <div>
    <h4><strong>Role:</strong> <%= @user.role %></h4>
    </div>
  </div>
  <h2 class="text-center">Competitive</h2>
  <div class="bottom-card">
    <div class="team-name">
    <h4><strong>Team:</strong> <%= @user.team.name %></h4>
    </div>
  </div>
</div>
